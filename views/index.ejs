    <ul class ="list-group"><br><b>Constitution<br><p id="stat"><%= Constitution %> (<%=Constitution_Bonus%>)</p></b>
  </div>
  <div class ="flex-container">
    <ul class ="list-group"><br><b>Intelligence<br><p id="stat"><%= Intelligence %> (<%=Intelligence_Bonus%>)</p></b>
  </div>
  <div class ="flex-container">
    <ul class ="list-group"><br><b>Wisdom<br><p id="stat"><%= Wisdom %> (<%=Wisdom_Bonus%>)</p></b>
