<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">


<div class="jumbotron">

      <h2>You are...</h2>
      <span><h1 style="color:White;"><%= charName %></h1></span>
      <h2>A <%= Alignment %>,</h2>
      <p><h2><%= charSex %> <%= charRace %> <%= charClass %>  </h2> <h5>-<%= subRace %>-</h5></p>
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">Your Backstory</button>


</div>



<!-- Modal -->
<div id="myModal" class="modal fade">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">

        <h4 class="modal-title"><%= charName %> (<%= charSex %> <%= charClass %>): Backstory</h4>
      </div>
      <div class="modal-body">
        <p><%= backstoryLife %><%= backstoryLikes %><%= backstoryDislikes %><%= backstoryFlaws %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-default" value="Give me another!" onClick="history.go()">Another</button>
      </div>
    </div>

  </div>
</div>


<div class="flex-container" id ="upper_statblock">

  <div class="flex-container" >
    <ul class ="list-group" ><br><b>Initiative<br><p id="stat"><%= Initiative %></p></b></ul>
  </div>
  <div class="flex-container">
    <ul class ="list-group" ><br><b>Hit Points<br><p id="stat"><%= HitPoints %></p></b></ul>
  </div>
  <div class="flex-container" >
    <ul class ="list-group" ><br><b>Armor Class<br><p id="stat"><%= armorClass %></p></b></ul>
  </div>
  <div class="flex-container" >
    <ul class ="list-group" ><br><b>Speed<br><p id="stat"><%= Speed %></p></b></ul>
  </div>

</div>

<div class="flex-container" id ="statblock">
